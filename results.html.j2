
<html>
    <head>
        <style type="text/css">
tr.new_book td {
    border-top: 1px solid gray;
}
body {
    font-family: monospace;
}
td, th {
    border-left: 1px solid black;
    margin-right: .5em;
    padding-left: .5em;
}
        </style>
    </head>
    <body>
        <table cellspacing="0">
            <thead>
                <tr>
                    <th>[&nbsp;]</th>
                    <th>Author</th>
                    <th>Title</th>
                    <th>Branch</th>
                    <th>Count</th>
                    <th>Collection</th>
                    <th>Call #</th>
                </tr>
            </thead>
            <tbody>
                {% for row in rows %}
                <tr class="{{ 'new_book' if row.title != last_title else same_book }}">
                    <td>[&nbsp;]</td>
                    <td>{{ row.author|e }}</td>
                    <td>{{ row.title|e }}</td>
                    <td>{{ row.branch_name|e }}</td>
                    <td>{{ row.count|e }}</td>
                    <td>{{ row.collection_name|e }}</td>
                    <td>{{ row.call_class|e }}</td>
                    {% set last_title = row.title %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>
