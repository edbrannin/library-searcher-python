
<html>
    <head>
        <style type="text/css">
tr.even {
    background-color: wheat;
}
body {
    font-family: monospace;
}
td, th {
    border-left: 1px solid black;
    margin-right: .5em;
    padding-left: .5em;
}
        </style>
    </head>
    <body>
        <table cellspacing="0">
            <thead>
                <tr>
                    <th>[&nbsp;]</th>
                    <th>Author</th>
                    <th>Title</th>
                    <th>Branch</th>
                    <th>Collection</th>
                    <th>Call #</th>
                </tr>
            </thead>
            <tbody>
                {% set row_class = cycler('odd', 'even') %}
                {% for row in rows %}
                <tr class="{{ row_class.next() if row.title != last_title else row_class.current }}">
                    <td>[&nbsp;]</td>
                    <td>{{ row.author|e }}</td>
                    <td>{{ row.title|e }}</td>
                    <td>{{ row.branch_name|e }}</td>
                    <td>{{ row.collection_name|e }}</td>
                    <td>{{ row.call_class|e }}</td>
                    {#
                    <td>{{last_title}}</td>
                    <td>{{row.title == last_title }}</td>
                    <td>{{row_class.current}}</td>
                    #}
                    {% set last_title = row.title %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>
