<!DOCTYPE html>
<html>
    <head>
        <meta chatset="utf-8">
        <style type="text/css">
body{
  -webkit-print-color-adjust:exact;
}

table {
    page-break-inside: avoid;
}

tr.new_book td {
    border-top: 1px solid gray;
    padding-top: 1em;
    font-weight: bold;
    background-color: wheat;
    page-break-before: auto;
}

body {
    font-family: monospace;
}

td, th {
    border-left: 1px solid black;
    padding-right: .5em;
    padding-left: .5em;
}

td:first-child, th:first-child {
    border-left: none;
}

        </style>
        <title>Library Search Results</title>
    </head>
    <body>
        <table cellspacing="0">
            <thead>
                <tr>
                    <th></th>
                    <th colspan=2>Author</th>
                    <th colspan=2>Title</th>
                </tr>
                <tr>
                    <th></th>
                    <th>Branch</th>
                    <th>Count</th>
                    <th>Collection</th>
                    <th>Call #</th>
                </tr>
            </thead>
            <tbody>
                {% for row in rows %}
                {% set new_book = row.title != last_title %}
                {% if new_book %}
                <tr class="new_book">
                    <td>{% if new_book %}[&nbsp;]{% endif %}</td>
                    <td colspan=2>{{ row.author|e }}</td>
                    <td colspan=2>{{ row.title|e }}</td>
                </tr>
                {% endif %}
                <tr>
                    <td></td>
                    <td>{{ row.branch_name|e }}</td>
                    <td>{{ row.count|e }}</td>
                    <td>{{ row.collection_name|e }}</td>
                    <td>{{ row.call_class|e }}</td>
                </tr>
                {% set last_title = row.title %}
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>
